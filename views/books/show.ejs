<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= bookById.title %> | My Book Shop</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/book-details.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>

    <main class="main-content">
        <div class="book-detail-container">
            <div class="book-header">
                <h1 class="book-title"><%= bookById.title %></h1>
                <div class="book-image-container">
                    <img src="<%= bookById.image %>" alt="Book Cover" class="book-image">
                </div>
            </div>

            <div class="book-info-grid">
                <!-- Left Column -->
                <div class="book-info-section">
                    <div class="book-info-item">
                        <span class="book-info-label">Description</span>
                        <p><%= bookById.description %></p>
                    </div>
                    
                    <div class="book-info-item">
                        <span class="book-info-label">Price</span>
                        <span class="book-price">$<%= bookById.unitPrice.toFixed(2) %></span>
                    </div>
                    
                    <div class="book-info-item">
                        <span class="book-info-label">Stock</span>
                        <span class="book-stock <%= bookById.stock > 0 ? 'in-stock' : 'out-of-stock' %>">
                            <%= bookById.stock %> units available
                        </span>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="book-info-section">
                    <div class="book-info-item">
                        <span class="book-info-label">Publication Details</span>
                        <div class="publication-details">
                            <p>Date: <%= bookById.publicationDate %></p>
                            <p>Publisher: <%= bookById.publisher %></p>
                            <p>Pages: <%= bookById.pages %></p>
                        </div>
                    </div>

                    <div class="book-info-item">
                        <span class="book-info-label">Technical Info</span>
                        <div class="technical-details">
                            <p>ISBN: <%= bookById.isbn %></p>
                            <p>Language: <%= bookById.language %></p>
                            <p>Category: <%= bookById.category %></p>
                        </div>
                    </div>

                    <div class="book-info-item">
                        <span class="book-info-label">Author</span>
                        <% if (bookById.author) { %>
                            <a href="/authors/<%= bookById.author._id %>" class="author-link">
                                <%= bookById.author.name %>
                            </a>
                        <% } else { %>
                            <span class="no-author">No author information available</span>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="book-actions">
                <a href="/books" class="btn back-link"><i class="fas fa-arrow-left"></i> Back to Catalog</a>
                <button class="btn add-to-cart"><i class="fas fa-cart-plus"></i> Add to Cart</button>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
    <script src="/js/main.js"></script>
</body>
</html>