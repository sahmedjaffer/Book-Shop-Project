<%- include('../partials/header.ejs') %>
     
<div class="admin-profile-card">
    <div class="admin-profile-header">
        <h2 class="admin-profile-title">👑 Admin: <%= userData.first %> <%= userData.last %></h2>
        <p class="admin-welcome">Welcome back, <%= userData.first %>! Here’s your administrator dashboard.</p>
    </div>

    <div class="admin-profile-info">
        <h3>📬 Contact Information</h3>
        <p><strong>Email:</strong> <%= userData.email %></p>
        <p><strong>Address:</strong> <%= userData.address %></p>
        <p><strong>Phone:</strong> <%= userData.phone %></p>
        <% if (userData._id) { %>
            <a href="/users/<%= userData._id %>/edit" class="btn btn-primary mt-1">
                ✏️ Edit Profile
            </a>
        <% } else { %>
            <p class="error-message">⚠️ Missing user ID</p>
        <% } %>
    </div>

    <hr class="divider">

    <div class="admin-action-grid">
        <!-- Authors Section -->
        <div class="admin-action-card">
            <h3>📚 Authors Management</h3>
            <a href="/authors/new" class="btn btn-success">
                ➕ Add New Author
            </a>
            <a href="/authors/" class="btn btn-warning mt-1">
                ✍️ Edit Authors
            </a>
        </div>

        <!-- Books Section -->
        <div class="admin-action-card">
            <h3>📖 Books Management</h3>
            <a href="/books/new" class="btn btn-success">
                📘 Add New Book
            </a>
            <a href="/books/" class="btn btn-warning mt-1">
                ✍️ Edit Books
            </a>
        </div>

        <!-- Orders Section -->
        <div class="admin-action-card">
            <h3>📦 Orders Management</h3>
            <a href="/orders/confirm" class="btn btn-primary">
                ✅ Confirm Orders
            </a>
            <a href="/orders/" class="btn btn-danger mt-1">
                📊 View Analytics
            </a>
        </div>
    </div>

    <hr class="divider">

    <div class="logout-section" style="text-align:center;">
        <a href="/logout" class="btn btn-danger">
            🚪 Logout
        </a>
    </div>
</div>

<%- include('../partials/footer.ejs') %>