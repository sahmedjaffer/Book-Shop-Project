<%- include('../partials/header.ejs') %>
     
<div class="admin-profile">
    <div class="profile-header">
        <h2>👑 <%= userData.first %> <%= userData.last %></h2>
        <p>Welcome back, <%= userData.first %>! Here’s your administrator dashboard.</p>
    </div>

    <div class="user-info">
        <div class="info-card">
            <h3>📬 Contact Information</h3>
            <p><strong>Email:</strong> <%= userData.email %></p>
            <p><strong>Address:</strong> <%= userData.address %></p>
            <p><strong>Phone:</strong> <%= userData.phone %></p>
            <% if (userData._id) { %>
                <a href="/users/<%= userData._id %>/edit" class="btn btn-primary">
                    ✏️ Edit Profile
                </a>
            <% } else { %>
                <p class="text-danger">⚠️ Missing user ID</p>
            <% } %>
        </div>
    </div>

    <hr class="divider">

    <div class="action-grid">
        <!-- Authors Section -->
        <div class="action-card">
            <h3>📚 Authors Management</h3>
            <a href="/authors/" class="btn btn-success">
                ➕ Add New Author
            </a>
            <a href="/authors/" class="btn btn-warning mt-1">
                ✍️ Edit Authors
            </a>
        </div>

        <!-- Books Section -->
        <div class="action-card">
            <h3>📖 Books Management</h3>
            <a href="/books/new" class="btn btn-success">
                📘 Add New Book
            </a>
            <a href="/books/" class="btn btn-warning mt-1">
                ✍️ Edit Books
            </a>
        </div>

        <!-- Orders Section -->
        <div class="action-card">
            <h3>📦 Orders Management</h3>
            <a href="/orders/confirm" class="btn btn-primary">
                ✅ Confirm Orders
            </a>
            <a href="/orders/" class="btn btn-danger mt-1">
                📊 View Analytics
            </a>
        </div>
    </div>

    <hr class="divider">

    <div class="logout-section">
        <a href="/logout" class="btn btn-danger">
            🚪 Logout
        </a>
    </div>
</div>

<%- include('../partials/footer.ejs') %>