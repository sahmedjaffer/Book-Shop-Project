<%- include('../partials/header.ejs') %>
<div class="card new-author-card">
  <h2 class="form-title">🖋️ Add New Author</h2>
  <form action="/authors" method="POST" class="form-vertical">
    <div class="form-group">
      <label for="authorName">Author Name:</label>
      <input type="text" id="authorName" name="authorName" required />
    </div>
    <div class="form-group">
      <label for="authorBiography">Author Biography:</label>
      <textarea id="authorBiography" name="authorBiography" required rows="4"></textarea>
    </div>
    <button type="submit" class="btn btn-success mt-1">➕ Create Author</button>
    <div class="form-footer">
      <a href="/authors" class="btn btn-primary">🔙 Back to All Authors</a>
    </div>
  </form>
</div>
<%- include('../partials/footer.ejs') %>
