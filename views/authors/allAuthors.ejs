<%- include('../partials/header') %>
<div class="card all-authors-card">
  <h1 class="form-title">üñãÔ∏è All Authors</h1>
  <% if (allAuthors && allAuthors.length > 0) { %>
    <ul class="author-list">
      <% allAuthors.forEach(author => { %>
        <li class="info-card author-item">
          <h2>
            <a href="/authors/<%= author._id %>" class="author-link">
              <%= author.name %>
            </a>
          </h2>
          <p>
            <strong>Biography:</strong> <%= author.biography %>
          </p>
          <% if (author.works && author.works.length > 0) { %>
            <div>
              <strong>Works:</strong>
              <ul class="works-list">
                <% author.works.forEach(work => { %>
                  <li>
                    <a href="/books/<%= work._id %>" class="work-link">
                      <%= work.title %>
                    </a>
                  </li>
                <% }) %>
              </ul>
            </div>
          <% } else { %>
            <div class="no-works">No works listed.</div>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <div class="error-message text-center">
      No authors found.
    </div>
  <% } %>
</div>
<%- include('../partials/footer') %>